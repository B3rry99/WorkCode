        checkbox3.config(state="disabled")
        checkbox4.config(state="disabled")
        checkbox5.config(state="disabled")
        checkbox3.deselect()
        checkbox4.deselect()
        checkbox5.deselect()
    entry4.config(state='normal')
    Enter4.config(state='normal')

